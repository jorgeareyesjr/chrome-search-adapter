{
  "version": "1.0.0",
  "name": "Chrome Search Adapter",
  "description": "A chrome extension that provides additional data for search engine results.",
  "manifest_version": 2,
  "page_action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png"
    }
  },
  "commands": {
    "000-adapter-left": {
      "description": "To Left"
    },
    "001-adapter-right": {
      "description": "To Right"
    },
    "002-adapter-bottom": {
      "description": "To Bottom"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "page": "views/background.html",
    "persistent": false
  },
  "options_ui": {
    "page": "views/options.html"
  },
  "permissions": [
    "activeTab",
    "background",
    "contextMenus",
    "system.display",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' http://localhost:8080 https://localhost:* 'unsafe-eval'; style-src https://localhost:8080 http://localhost:* 'unsafe-inline'; object-src 'self'"
}